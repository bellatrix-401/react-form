{
  "extends": "next/core-web-vitals",
  "rules": {
    "prefer-const": "error",
    "camelcase": "error",
    "eqeqeq": [
        "error",
        "smart"
    ],
    "prefer-template": "error",
    "no-console": "error",

    "linebreak-style": [
        "error",
        "unix"
    ],
    "space-before-blocks": "error",
    "brace-style": "error",
    "no-multi-spaces": "error",
    "key-spacing": [
        "error",
        {
            "beforeColon": false,
            "afterColon": true
        }
    ],
    "object-curly-spacing": [
        "error",
        "always"
    ],
    "indent": ["error", 2, { "SwitchCase": 1 }],
    "quotes": [
      "error",
      "single",
      {
          "avoidEscape": true
      }
    ],
    "semi": [
        "error",
        "never"
    ],
    "max-len": ["error", {
      "code": 150,
      "comments": 180
    }]
  }
}